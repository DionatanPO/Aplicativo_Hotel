<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_funcionario"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="05dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/borda_branca"
        android:elevation="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView

                android:id="@+id/card_manutencao_ap"
                android:layout_width="120dp"
                android:layout_height="26dp"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:text="AP "
                android:textColor="@color/roxo"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_manutencao_data"
                android:layout_width="285dp"
                android:layout_height="20dp"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:text="Data da solicitação: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_manutencao_ap" />

            <TextView
                android:id="@+id/card_manutencao_funcionario"
                android:layout_width="285dp"
                android:layout_height="20dp"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:text="Solicitada por: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_manutencao_ap" />

            <TextView

                android:id="@+id/card_manutencao_observacao"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:text="Observação: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_manutencao_funcionario" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_baseline_build_24"
                android:tint="@color/roxo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>