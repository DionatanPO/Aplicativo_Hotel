<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_casa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="Painel"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout

        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:columnCount="2"
        android:padding="10dp"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/btn_check_in"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_margin="10dp"
            android:background="@drawable/borda_circle"
            android:drawableTop="@drawable/ic_entrar"
            android:elevation="3dp"
            android:paddingTop="20dp"
            android:text="Check-in"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:translationZ="5dp" />

        <TextView
            android:elevation="3dp"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_margin="10dp"
            android:background="@drawable/borda_circle"
            android:drawableTop="@drawable/ic_saida"
            android:paddingTop="20dp"
            android:text="Check-out"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:elevation="3dp"
            android:id="@+id/buttonFuncionarios"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_margin="10dp"
            android:background="@drawable/borda_circle"
            android:drawableTop="@drawable/ic_funcionarios"
            android:paddingTop="12dp"
            android:text="FuncionÃ¡rio"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:elevation="3dp"
            android:id="@+id/btn_limpeza"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_margin="15dp"
            android:background="@drawable/borda_circle"
            android:drawableTop="@drawable/ic_limpeza"
            android:paddingTop="15dp"
            android:text="Limpeza"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:elevation="3dp"
            android:id="@+id/btn_apartamento"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:background="@drawable/borda_circle"
            android:drawableTop="@drawable/ic_chave"
            android:paddingTop="15dp"
            android:text="Apartamento"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:elevation="3dp"
            android:id="@+id/btn_hospedagem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:background="@drawable/borda_circle"
            android:drawableTop="@drawable/ic_pasta"
            android:paddingTop="26dp"
            android:text="Hospedagem"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>